<div class="row mt-1">
    <div class="col-12">
        <% flash.each do |message_type, message| %>
            <% if message_type=="notice" %>
            <% message_type="info"%>
            <% end %>
            <% if message_type=="alert" %>
            <% message_type="warning"%>
            <% end %>    
            <div class="alert alert-<%= message_type %> shadow"><%= message %></div>
        <% end %>
    </div>
</div>
  