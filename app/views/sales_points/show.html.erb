<script>
  let map;
  function initMap() {
    const myLatLng = { lat: <%=@sales_point.lat%>, lng: <%=@sales_point.lon%> };
    map = new google.maps.Map(document.getElementById("map"), {
      center: myLatLng,
      zoom: 15,
      mapTypeId: "terrain",
    });
    new google.maps.Marker({
    position: myLatLng,
    map,
    title: "<%=@sales_point.description%>",
    });
  }
</script>

